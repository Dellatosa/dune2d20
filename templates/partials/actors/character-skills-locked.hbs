<!-- Battle -->
<div class="skill">{{ localize 'dune2d20.actor.battle' }} <a class="roll-skill" title="{{localize 'dune2d20.hint.rollSkill'}}" data-skill="battle"><i class="fa-solid fa-dice-d20"></i></a></div>
<div class="val"><input name="system.skills.battle.value" type="number" value="{{data.system.skills.battle.value}}" min="{{data.system.skills.battle.min}}" max="{{data.system.skills.battle.max}}" readonly/></div>
<div class="focuses">
    {{#each focuses as |focus id|}}
        {{#if (eq focus.system.skill "battle") }}
            <div class="focus" data-item-id="{{focus._id}}">• {{focus.name}}</div>
        {{/if}}
    {{/each}}
</div>
<div class="stat-end"> </div>
